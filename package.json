{
  "name": "@legion/monorepo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Legion - A modular framework for building AI agent tools",
  "workspaces": [
    "packages/*",
    "packages/apps/*",
    "packages/code-gen/*",
    "packages/frontend/*",
    "packages/planning/*",
    "packages/shared/*"
  ],
  "scripts": {
    "test": "npm run test --workspaces",
    "test:module-loader": "npm run test --workspace=@legion/module-loader",
    "test:cli": "npm run test --workspace=@legion/cli",
    "test:tools": "npm run test --workspace=@legion/tools",
    "test:llm": "npm run test --workspace=@legion/llm",
    "test:agent": "npm run test --workspace=@legion/agent",
    "test:resource-manager": "npm run test --workspace=@legion/resource-manager",
    "test:playwright": "npm run test --workspace=@legion/playwright",
    "test:node-runner": "npm run test --workspace=@legion/node-runner",
    "test:log-manager": "npm run test --workspace=@legion/log-manager",
    "test:railway": "npm run test --workspace=@legion/railway",
    "test:aiur": "npm run test --workspace=@legion/aiur",
    "test:plan-executor": "npm run test --workspace=@legion/plan-executor",
    "test:plan-executor-tools": "npm run test --workspace=@legion/plan-executor-tools",
    "test:recursive-planner": "npm run test --workspace=@legion/recursive-planner",
    "test:behavior-tree": "npm run test --workspace=@legion/behavior-tree",
    "test:tool-architecture": "npm run test --workspace=@legion/tool-architecture",
    "test:components": "npm run test --workspace=@legion/components",
    "test:watch": "npm run test:watch --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "eslint packages/*/src/**/*.js",
    "build": "npm run build --workspaces --if-present",
    "clean": "rm -rf packages/*/node_modules packages/*/coverage node_modules",
    "split:check": "node scripts/split/run-split.js",
    "split:simple": "node scripts/split/split-monorepo.js",
    "split:history": "node scripts/split/split-with-history.js",
    "split": "node scripts/split/split-package.js",
    "subtree:discover": "node scripts/git/discover-subtrees.js",
    "subtree:push": "node scripts/git/push-all-subtrees.js",
    "subtree:pull": "node scripts/git/pull-all-subtrees.js",
    "subtree:setup": "node scripts/git/setup-subtree-remotes.js",
    "polyrepo:add": "node scripts/split/add-package-to-polyrepo.js",
    "cli": "node packages/cli/src/index.js interactive",
    "cli:help": "node packages/cli/src/index.js help",
    "cli:list": "node packages/cli/src/index.js list",
    "agent": "node packages/agent/src/cli.js",
    "chat": "npm start --workspace=@legion/web-backend",
    "dev:frontend": "echo 'Frontend served by backend at http://localhost:3000'",
    "dev:backend": "npm start --workspace=@legion/web-backend",
    "dev:chat": "npm start --workspace=@legion/web-backend",
    "server": "node scripts/server/start-webserver.js",
    "server:start": "node scripts/server/start-webserver.js",
    "server:kill": "node scripts/server/kill-port.js 3000",
    "server:force-kill": "node scripts/server/kill-port.js 3000 --force",
    "kill-port": "node scripts/server/kill-port.js",
    "aiur": "npm start --workspace=@legion/aiur",
    "aiur:start": "npm start --workspace=@legion/aiur",
    "aiur:kill": "npm run kill --workspace=@legion/aiur",
    "debug-ui": "npm start --workspace=@legion/aiur-debug-ui",
    "debug-ui:start": "npm start --workspace=@legion/aiur-debug-ui",
    "debug-ui:kill": "npm run kill --workspace=@legion/aiur-debug-ui",
    "storage:server": "node scripts/server/start-storage-server.js",
    "storage:demo": "node scripts/demo/storage-browser-demo.js",
    "storage:browser": "npm start --workspace=@legion/storage-browser",
    "storage:test": "node scripts/test/test-storage-integration.js",
    "storage:kill": "node scripts/server/kill-port.js 3700"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "lerna": "^8.0.2"
  },
  "keywords": [
    "legion",
    "ai",
    "agents",
    "tools",
    "openai",
    "cli"
  ],
  "author": "Anand Sukumaran",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxximus-dev/Legion.git"
  }
}