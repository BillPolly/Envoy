{
  "name": "browser-monitor",
  "version": "1.0.0",
  "description": "Browser automation and monitoring for full-stack observability",
  "dependencies": {
    "BROWSER_TYPE": {
      "type": "string",
      "optional": true,
      "default": "puppeteer",
      "description": "Browser automation library (puppeteer or playwright)"
    },
    "BROWSER_HEADLESS": {
      "type": "boolean",
      "optional": true,
      "default": true,
      "description": "Run browser in headless mode"
    }
  },
  "initialization": {
    "type": "async",
    "factory": "BrowserMonitor.create"
  },
  "exports": {
    "BrowserMonitor": "./src/BrowserMonitor.js"
  }
}