{
  "name": "@jsenvoy/cli",
  "version": "0.0.1",
  "description": "jsEnvoy CLI - A generic command-line interface for executing modular AI agent tools",
  "type": "module",
  "main": "./src/index.js",
  "bin": {
    "jsenvoy": "./bin/jsenvoy"
  },
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage"
  },
  "keywords": [
    "cli",
    "jsenvoy",
    "ai",
    "tools",
    "command-line",
    "modular",
    "extensible"
  ],
  "author": "Anand Sukumaran",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BillPolly/cli.git"
  },
  "homepage": "https://github.com/yourusername/jsenvoy/tree/main/packages/cli#readme",
  "bugs": {
    "url": "https://github.com/yourusername/jsenvoy/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src",
    "bin",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@jsenvoy/modules": "*",
    "chalk": "^4.1.2",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "maxWorkers": 1,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
