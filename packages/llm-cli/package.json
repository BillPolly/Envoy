{
  "name": "@jsenvoy/llm-cli",
  "version": "1.0.0",
  "description": "A powerful JavaScript framework for building command-line interfaces with natural language understanding",
  "type": "module",
  "main": "./src/index.js",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --ci --coverage --watchAll=false",
    "clean": "rm -rf dist coverage .nyc_output",
    "example:chat": "node examples/chat/index.js",
    "example:chat-default": "node examples/chat/default-chat.js",
    "example:chat-openai": "node examples/chat/default-chat-openai.js",
    "example:calculator": "node examples/calculator/index.js",
    "example:project": "node examples/project-manager/index.js"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "jest": "^29.5.0",
    "dotenv": "^17.1.0"
  },
  "peerDependencies": {
    "anthropic": ">=0.20.0",
    "openai": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "openai": {
      "optional": true
    },
    "anthropic": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BillPolly/llm-cli.git"
  }
}