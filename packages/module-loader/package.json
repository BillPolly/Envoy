{
  "name": "@legion/module-loader",
  "version": "0.0.1",
  "description": "Core infrastructure for building modular tool systems - base classes, dependency injection, and module management",
  "type": "module",
  "main": "./src/index.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage"
  },
  "keywords": [
    "jsenvoy",
    "modules",
    "tools",
    "infrastructure",
    "dependency-injection",
    "base-classes"
  ],
  "author": "Anand Sukumaran",
  "license": "MIT",
  "dependencies": {
    "moment": "^2.30.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BillPolly/module-loader.git"
  }
}
