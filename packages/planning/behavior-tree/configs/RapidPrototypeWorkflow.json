{
  "type": "sequence",
  "id": "rapid-prototype-workflow",
  "description": "Quick workflow to generate and test a web app prototype",
  "children": [
    {
      "type": "parallel",
      "id": "parallel-generation",
      "description": "Generate app components in parallel",
      "successPolicy": "all",
      "children": [
        {
          "type": "action",
          "id": "generate-package-json",
          "tool": "packageJsonGenerator",
          "params": {
            "appName": "QuickPrototype",
            "version": "0.1.0",
            "description": "Quick prototype generated with BT framework",
            "buildTool": "vite"
          }
        },
        {
          "type": "action",
          "id": "generate-html",
          "tool": "htmlGenerator",
          "params": {
            "appName": "QuickPrototype",
            "title": "Quick Prototype",
            "theme": "light"
          }
        },
        {
          "type": "action",
          "id": "generate-css",
          "tool": "cssGenerator",
          "params": {
            "appName": "QuickPrototype",
            "theme": "modern",
            "colorScheme": "green"
          }
        }
      ]
    },
    {
      "type": "action",
      "id": "generate-entry",
      "tool": "mainEntryGenerator",
      "params": {
        "appName": "QuickPrototype",
        "framework": "react"
      }
    },
    {
      "type": "sequence",
      "id": "quick-test",
      "description": "Install and quick test",
      "children": [
        {
          "type": "action",
          "id": "install-deps",
          "tool": "npmInstaller",
          "params": {
            "packageManager": "npm",
            "timeout": 180000
          }
        },
        {
          "type": "action",
          "id": "launch-browser",
          "tool": "browserManager",
          "params": {
            "action": "launch",
            "browserName": "prototype-browser",
            "headless": true,
            "viewport": {"width": 1024, "height": 768}
          }
        },
        {
          "type": "action",
          "id": "start-server",
          "tool": "serverManager",
          "params": {
            "action": "start",
            "command": "dev",
            "port": 3000,
            "serverName": "prototype-server",
            "waitForReady": true
          }
        },
        {
          "type": "action",
          "id": "quick-screenshot",
          "tool": "screenshotCapture",
          "params": {
            "url": "http://localhost:3000",
            "browserName": "prototype-browser",
            "type": "fullPage",
            "fileName": "prototype-preview.png"
          }
        }
      ]
    }
  ]
}