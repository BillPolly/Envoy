{
  "name": "ClassGenerator",
  "description": "Generates complete classes with comprehensive testing and validation",
  "domains": ["code", "testing", "development", "classes"],
  "capabilities": [
    "code-generation",
    "test-creation", 
    "test-execution",
    "code-validation",
    "error-fixing"
  ],
  "toolDependencies": [
    "codeGenerator",
    "testGenerator", 
    "testRunner",
    "codeFormatter",
    "staticAnalyzer"
  ],
  "promptTemplate": "class-generator.md",
  "examples": [
    {
      "goal": "Create a User class with authentication methods",
      "requirements": [
        "Include login/logout methods",
        "Add password validation", 
        "Include comprehensive unit tests",
        "Follow TypeScript best practices"
      ],
      "expectedSteps": [
        "Generate User class with auth methods",
        "Create unit tests for all methods",
        "Run tests and validate results",
        "Fix any failing tests",
        "Format and finalize code"
      ]
    }
  ],
  "parameters": {
    "language": {
      "type": "string",
      "description": "Programming language for the class",
      "default": "typescript",
      "options": ["typescript", "javascript", "python", "java"]
    },
    "testFramework": {
      "type": "string", 
      "description": "Testing framework to use",
      "default": "jest",
      "options": ["jest", "mocha", "pytest", "junit"]
    },
    "requirements": {
      "type": "array",
      "description": "Specific requirements for the class",
      "items": { "type": "string" }
    },
    "className": {
      "type": "string",
      "description": "Name of the class to generate",
      "required": true
    }
  },
  "orchestration": {
    "enabled": true,
    "maxReplanAttempts": 3,
    "executionStrategy": "sequential",
    "continueOnFailure": false,
    "stepTimeout": 60000
  },
  "temperature": 0.3,
  "maxRetries": 2,
  "debugMode": false
}