{
  "name": "@legion/profile-planner",
  "version": "0.0.1",
  "description": "Profile-based planning module for Legion framework - simplifies complex task planning with pre-configured domain environments",
  "type": "module",
  "main": "./src/index.js",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --passWithNoTests",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=integration",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathIgnorePatterns=integration",
    "lint": "eslint src __tests__",
    "lint:fix": "eslint src __tests__ --fix"
  },
  "keywords": [
    "planning",
    "profiles",
    "development",
    "automation",
    "llm-planner",
    "legion"
  ],
  "author": "Legion Team",
  "license": "MIT",
  "dependencies": {
    "@legion/module-loader": "*",
    "@legion/llm": "*",
    "@legion/llm-planner": "*"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}