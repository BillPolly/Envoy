{
  "name": "web",
  "toolName": "web_planner",
  "description": "Plan web development tasks with HTML, CSS, JavaScript, and modern frameworks",
  "requiredModules": ["file", "web-server", "node-runner"],
  "defaultInputs": ["user_request", "project_context"],
  "defaultOutputs": ["file_created", "project_created", "server_running"],
  "maxSteps": 30,
  "contextPrompts": [
    "You are working in a web development environment.",
    "Use semantic HTML5 markup.",
    "Apply responsive CSS with mobile-first approach.",
    "Use modern JavaScript ES6+ features.",
    "Follow accessibility best practices (WCAG guidelines).",
    "Optimize for performance and SEO.",
    "Structure projects with clear separation of concerns.",
    "Use Legion tools: file_write for creating files, web_server_start for serving content."
  ],
  "allowableActions": [
    {
      "type": "create_html_file",
      "description": "Create an HTML file with proper structure",
      "inputs": {
        "file_path": {
          "type": "string",
          "description": "Path where HTML file should be created",
          "examples": ["index.html", "pages/about.html", "public/contact.html"]
        },
        "content": {
          "type": "string",
          "description": "HTML content with proper DOCTYPE and structure"
        }
      },
      "outputs": {
        "file_created": {
          "type": "string",
          "description": "Path to the created HTML file"
        }
      }
    },
    {
      "type": "create_css_file",
      "description": "Create a CSS stylesheet",
      "inputs": {
        "file_path": {
          "type": "string",
          "description": "Path where CSS file should be created",
          "examples": ["styles/main.css", "css/theme.css", "public/styles.css"]
        },
        "content": {
          "type": "string",
          "description": "CSS content with proper formatting"
        }
      },
      "outputs": {
        "file_created": {
          "type": "string",
          "description": "Path to the created CSS file"
        }
      }
    },
    {
      "type": "create_js_module",
      "description": "Create a JavaScript module for web frontend",
      "inputs": {
        "file_path": {
          "type": "string",
          "description": "Path where JS file should be created",
          "examples": ["js/app.js", "scripts/main.js", "src/index.js"]
        },
        "content": {
          "type": "string",
          "description": "JavaScript module content"
        }
      },
      "outputs": {
        "file_created": {
          "type": "string",
          "description": "Path to the created JS file"
        }
      }
    },
    {
      "type": "create_web_project",
      "description": "Create a basic web project structure",
      "inputs": {
        "project_name": {
          "type": "string",
          "description": "Name of the web project",
          "examples": ["portfolio-site", "landing-page", "web-app"]
        },
        "framework": {
          "type": "string",
          "description": "Web framework to use (optional)",
          "examples": ["vanilla", "react", "vue", "next"],
          "default": "vanilla"
        }
      },
      "outputs": {
        "project_created": {
          "type": "object",
          "description": "Details about created project structure"
        }
      }
    },
    {
      "type": "start_dev_server",
      "description": "Start a development web server",
      "inputs": {
        "port": {
          "type": "number",
          "description": "Port number for the server",
          "default": 3000
        },
        "root_dir": {
          "type": "string",
          "description": "Root directory to serve",
          "default": "."
        }
      },
      "outputs": {
        "server_running": {
          "type": "object",
          "description": "Server information including URL"
        }
      }
    },
    {
      "type": "create_api_endpoint",
      "description": "Create a REST API endpoint",
      "inputs": {
        "file_path": {
          "type": "string",
          "description": "Path for API route file",
          "examples": ["api/users.js", "routes/products.js"]
        },
        "method": {
          "type": "string",
          "description": "HTTP method",
          "examples": ["GET", "POST", "PUT", "DELETE"]
        },
        "endpoint": {
          "type": "string",
          "description": "API endpoint path",
          "examples": ["/api/users", "/api/products/:id"]
        }
      },
      "outputs": {
        "endpoint_created": {
          "type": "string",
          "description": "Path to the created endpoint file"
        }
      }
    },
    {
      "type": "setup_build_tools",
      "description": "Set up modern build tools for web development",
      "inputs": {
        "tools": {
          "type": "array",
          "description": "Build tools to set up",
          "examples": [["webpack"], ["vite"], ["parcel", "babel"]]
        }
      },
      "outputs": {
        "build_configured": {
          "type": "boolean",
          "description": "True if build tools were configured"
        }
      }
    },
    {
      "type": "create_component",
      "description": "Create a reusable web component",
      "inputs": {
        "component_name": {
          "type": "string",
          "description": "Name of the component",
          "examples": ["Button", "Card", "Navigation"]
        },
        "component_type": {
          "type": "string",
          "description": "Type of component",
          "examples": ["function", "class", "web-component"],
          "default": "function"
        }
      },
      "outputs": {
        "component_created": {
          "type": "string",
          "description": "Path to the created component"
        }
      }
    }
  ],
  "templates": {
    "htmlBoilerplate": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>{{PAGE_TITLE}}</title>\n    <link rel=\"stylesheet\" href=\"{{CSS_PATH}}\">\n</head>\n<body>\n    {{BODY_CONTENT}}\n    <script src=\"{{JS_PATH}}\"></script>\n</body>\n</html>",
    "cssReset": "/* CSS Reset */\n*, *::before, *::after {\n    box-sizing: border-box;\n    margin: 0;\n    padding: 0;\n}\n\nhtml {\n    font-size: 16px;\n    line-height: 1.5;\n}\n\nbody {\n    font-family: system-ui, -apple-system, sans-serif;\n}",
    "jsModule": "// {{MODULE_NAME}}\n'use strict';\n\nexport const {{MODULE_NAME}} = (() => {\n    // Private variables and functions\n    \n    // Public API\n    return {\n        {{PUBLIC_METHODS}}\n    };\n})();"
  }
}