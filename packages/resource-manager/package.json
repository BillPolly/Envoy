{
  "name": "@legion/resource-manager",
  "version": "0.0.1",
  "description": "Resource management system for jsEnvoy - handles process lifecycle, agent orchestration, and dependency management",
  "type": "module",
  "main": "./src/index.js",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage"
  },
  "keywords": [
    "jsenvoy",
    "resource",
    "process",
    "agent",
    "orchestration",
    "lifecycle"
  ],
  "author": "Anand Sukumaran",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BillPolly/resource-manager.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@legion/tool-system": "^1.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
