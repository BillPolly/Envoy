{
  "name": "sd",
  "description": "Software Development autonomous agent system",
  "version": "1.0.0",
  "type": "module",
  "dependencies": {
    "ANTHROPIC_API_KEY": {
      "type": "string",
      "description": "Anthropic API key for LLM decisions",
      "required": true
    },
    "MONGODB_URI": {
      "type": "string",
      "description": "MongoDB connection string for design database",
      "required": false,
      "default": "mongodb://localhost:27017/sd-design"
    }
  },
  "initialization": {
    "config": {
      "apiKey": "${ANTHROPIC_API_KEY}",
      "mongoUri": "${MONGODB_URI}",
      "enableDebug": false
    }
  },
  "exports": {
    "agents": [
      "RequirementsAgent",
      "DomainModelingAgent",
      "ArchitectureAgent",
      "StateDesignAgent",
      "TestGenerationAgent",
      "CodeGenerationAgent",
      "QualityAssuranceAgent"
    ],
    "tools": [
      "RequirementParserTool",
      "UserStoryGeneratorTool",
      "EntityModelingTool",
      "BoundedContextGeneratorTool",
      "UseCaseGeneratorTool",
      "LayerGeneratorTool",
      "TestGeneratorTool",
      "CodeGeneratorTool"
    ],
    "profiles": [
      "sd-full",
      "sd-requirements",
      "sd-domain",
      "sd-architecture",
      "sd-implementation",
      "sd-testing"
    ]
  }
}