  },
  "keywords": [
    "instrumentation",
    "monitoring",
    "debugging",
    "node",
    "runtime",
    "injection",
    "sidewinder"
  ],
  "dependencies": {
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
