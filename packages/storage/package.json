{
  "name": "@legion/storage",
  "version": "1.0.0",
  "description": "StorageProvider with provider architecture for Legion framework - supports direct backend usage and actor-based operations",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest __tests__/integration/",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest __tests__/unit/"
  },
  "keywords": [
    "legion",
    "storage",
    "database",
    "mongodb",
    "provider",
    "actors",
    "resource-manager"
  ],
  "author": "Legion Framework",
  "license": "MIT",
  "dependencies": {
    "@legion/actors": "*",
    "mongodb": "^6.10.0",
    "sqlite3": "^5.1.7",
    "sqlite": "^5.1.1",
    "zod": "^3.22.4",
    "@legion/tool-system": "^1.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.0.1"
  },
  "jest": {
    "transform": {},
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxximus-dev/Legion.git",
    "directory": "packages/storage"
  },
  "directories": {
    "doc": "docs"
  },
  "bugs": {
    "url": "https://github.com/maxximus-dev/Legion/issues"
  },
  "homepage": "https://github.com/maxximus-dev/Legion#readme"
}
