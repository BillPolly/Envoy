{
  "name": "@legion/tools-collection",
  "version": "1.0.0",
  "description": "Collection of tool implementations for the Legion framework",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch"
  },
  "dependencies": {
    "@legion/tools": "workspace:*",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "jest": "^29.0.0"
  },
  "jest": {
    "preset": "@shelf/jest-mongodb",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".js"],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapping": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {}
  }
}