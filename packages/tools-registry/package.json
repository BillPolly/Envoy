{
  "name": "@legion/tools-registry",
  "version": "1.0.0",
  "description": "Clean, test-driven tool registry for Legion AI agents with semantic search capabilities",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:watch": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch --runInBand",
    "test:coverage": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand",
    "test:unit": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest __tests__/unit --runInBand",
    "test:integration": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest __tests__/integration --runInBand",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "status": "NODE_OPTIONS=--experimental-vm-modules node scripts/check-status.js",
    "status:verbose": "NODE_OPTIONS=--experimental-vm-modules node scripts/check-status.js --verbose",
    "discover": "NODE_OPTIONS=--experimental-vm-modules node scripts/discover-modules.js",
    "load": "NODE_OPTIONS=--experimental-vm-modules node scripts/load-tools.js",
    "load:complete": "NODE_OPTIONS=--experimental-vm-modules node scripts/load-complete-pipeline.js",
    "perspectives": "NODE_OPTIONS=--experimental-vm-modules node scripts/generate-perspectives.js",
    "embeddings": "NODE_OPTIONS=--experimental-vm-modules node scripts/generate-embeddings.js",
    "vectors": "NODE_OPTIONS=--experimental-vm-modules node scripts/index-vectors.js",
    "search": "NODE_OPTIONS=--experimental-vm-modules node scripts/semantic-search.js",
    "verify": "NODE_OPTIONS=--experimental-vm-modules node scripts/verify-pipeline.js",
    "reset": "NODE_OPTIONS=--experimental-vm-modules node scripts/reset-database.js",
    "clear": "NODE_OPTIONS=--experimental-vm-modules node scripts/clear-database.js",
    "clear:force": "NODE_OPTIONS=--experimental-vm-modules node scripts/clear-database.js --force",
    "clear:all": "NODE_OPTIONS=--experimental-vm-modules node scripts/clear-database.js --include-registry",
    "clear:all:force": "NODE_OPTIONS=--experimental-vm-modules node scripts/clear-database.js --force --include-registry"
  },
  "keywords": [
    "legion",
    "ai",
    "agent",
    "tools-registry",
    "module-loader",
    "semantic-search",
    "test-driven"
  ],
  "author": "Legion Framework",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@legion/resource-manager": "workspace:*",
    "@legion/storage": "workspace:*",
    "@legion/llm": "workspace:*"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/",
    "README.md"
  ]
}