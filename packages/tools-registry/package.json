{
  "name": "@legion/tools-registry",
  "version": "1.0.0",
  "description": "Tool registry and management infrastructure for Legion AI agents",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "legion-mcp": "./src/cli/mcp-cli.js"
  },
  "scripts": {
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:watch": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch --runInBand",
    "test:coverage": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand",
    "manager": "NODE_OPTIONS='--experimental-vm-modules' node scripts/manager.js",
    "search": "NODE_OPTIONS='--experimental-vm-modules' node scripts/search.js",
    "verify": "NODE_OPTIONS='--experimental-vm-modules' node scripts/verify.js",
    "tools": "NODE_OPTIONS='--experimental-vm-modules' node scripts/tools.js",
    "db:pipeline": "NODE_OPTIONS='--experimental-vm-modules' node scripts/manager.js pipeline",
    "db:discover": "NODE_OPTIONS='--experimental-vm-modules' node scripts/manager.js discover",
    "db:load": "NODE_OPTIONS='--experimental-vm-modules' node scripts/manager.js load",
    "db:clear": "NODE_OPTIONS='--experimental-vm-modules' node scripts/manager.js clear",
    "db:status": "NODE_OPTIONS='--experimental-vm-modules' node scripts/manager.js status",
    "db:verify": "NODE_OPTIONS='--experimental-vm-modules' node scripts/verify.js health",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "echo 'No build step required for ES modules'",
    "dev": "node --watch src/index.js",
    "cli": "node src/cli/mcp-cli.js"
  },
  "keywords": [
    "legion",
    "ai",
    "agent",
    "tools-registry",
    "mcp",
    "model-context-protocol",
    "llm",
    "automation",
    "wrapper",
    "module",
    "architecture"
  ],
  "author": "Legion Framework",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "eslint": "^8.57.0"
  },
  "dependencies": {
    "@legion/resource-manager": "^1.0.0",
    "@legion/schema": "^0.0.1",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1",
    "semver": "^7.6.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4",
    "glob": "^10.3.10",
    "simple-git": "^3.19.0",
    "dotenv": "^16.0.0",
    "fs-extra": "^11.2.0",
    "execa": "^8.0.1"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/legion-framework/tools.git"
  },
  "bugs": {
    "url": "https://github.com/legion-framework/tools/issues"
  },
  "homepage": "https://github.com/legion-framework/tools#readme"
}