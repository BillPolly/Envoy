{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MCP Server Configuration",
  "description": "Configuration for Model Context Protocol (MCP) server integration in Legion",
  "type": "object",
  "properties": {
    "mcpServers": {
      "type": "object",
      "description": "Configuration for MCP servers",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Human-readable name for the server"
            },
            "description": {
              "type": "string",
              "description": "Description of what this server provides"
            },
            "command": {
              "type": "string",
              "description": "Command to start the server"
            },
            "args": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Arguments to pass to the server command"
            },
            "env": {
              "type": "object",
              "additionalProperties": { "type": "string" },
              "description": "Environment variables for the server"
            },
            "cwd": {
              "type": "string",
              "description": "Working directory for the server"
            },
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Whether this server is enabled"
            },
            "autoStart": {
              "type": "boolean",
              "default": false,
              "description": "Start this server automatically on system startup"
            },
            "category": {
              "type": "string",
              "enum": ["filesystem", "git", "web", "database", "development", "ai", "system", "general"],
              "default": "general",
              "description": "Category for organizing servers"
            },
            "tags": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Tags for searching and filtering"
            },
            "timeout": {
              "type": "number",
              "default": 30000,
              "description": "Timeout for tool execution (milliseconds)"
            },
            "retryAttempts": {
              "type": "number",
              "default": 3,
              "description": "Number of retry attempts for failed operations"
            },
            "healthCheck": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": true },
                "interval": { "type": "number", "default": 60000 },
                "timeout": { "type": "number", "default": 5000 },
                "maxFailures": { "type": "number", "default": 3 }
              },
              "description": "Health check configuration"
            }
          },
          "required": ["name", "command"],
          "additionalProperties": false
        }
      }
    },
    "discovery": {
      "type": "object",
      "description": "MCP server discovery settings",
      "properties": {
        "sources": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string", "enum": ["npm", "github", "manual"] },
              "url": { "type": "string" },
              "searchTerms": {
                "type": "array",
                "items": { "type": "string" }
              },
              "enabled": { "type": "boolean", "default": true }
            },
            "required": ["type"]
          },
          "default": [
            {
              "type": "npm",
              "searchTerms": ["mcp-server", "model-context-protocol"],
              "enabled": true
            },
            {
              "type": "github",
              "searchTerms": ["mcp-server", "model-context-protocol"],
              "enabled": true
            }
          ]
        },
        "updateInterval": {
          "type": "number",
          "default": 86400000,
          "description": "How often to update the server registry (milliseconds)"
        },
        "cacheTimeout": {
          "type": "number", 
          "default": 3600000,
          "description": "Cache timeout for discovery results (milliseconds)"
        }
      }
    },
    "integration": {
      "type": "object",
      "description": "Legion integration settings",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable MCP integration in Legion"
        },
        "toolPrefix": {
          "type": "string",
          "default": "mcp",
          "description": "Prefix for MCP tools in tool registry"
        },
        "semanticSearch": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "indexMCPTools": { "type": "boolean", "default": true },
            "searchWeight": { "type": "number", "default": 0.8 },
            "autoSuggest": { "type": "boolean", "default": true }
          }
        },
        "observability": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "logLevel": { 
              "type": "string", 
              "enum": ["debug", "info", "warn", "error"],
              "default": "info"
            },
            "traceExecution": { "type": "boolean", "default": true },
            "collectMetrics": { "type": "boolean", "default": true }
          }
        }
      }
    }
  },
  "examples": [
    {
      "mcpServers": {
        "filesystem": {
          "name": "Filesystem Operations",
          "description": "Provides file and directory operations",
          "command": "npx",
          "args": ["@modelcontextprotocol/server-filesystem", "/path/to/allowed/directory"],
          "category": "filesystem",
          "tags": ["file", "directory", "read", "write"],
          "enabled": true,
          "autoStart": true
        },
        "git": {
          "name": "Git Operations", 
          "description": "Git repository management tools",
          "command": "npx",
          "args": ["@modelcontextprotocol/server-git"],
          "category": "git",
          "tags": ["git", "version-control", "repository"],
          "enabled": true,
          "cwd": "/path/to/repo"
        },
        "web-search": {
          "name": "Web Search",
          "description": "Web search and scraping capabilities", 
          "command": "npx",
          "args": ["@modelcontextprotocol/server-brave-search"],
          "env": {
            "BRAVE_API_KEY": "${BRAVE_API_KEY}"
          },
          "category": "web",
          "tags": ["search", "web", "scraping"],
          "enabled": true
        }
      },
      "discovery": {
        "sources": [
          {
            "type": "npm",
            "searchTerms": ["mcp-server", "@modelcontextprotocol"],
            "enabled": true
          }
        ],
        "updateInterval": 86400000
      },
      "integration": {
        "enabled": true,
        "toolPrefix": "mcp",
        "semanticSearch": {
          "enabled": true,
          "searchWeight": 0.8,
          "autoSuggest": true
        },
        "observability": {
          "enabled": true,
          "logLevel": "info",
          "traceExecution": true
        }
      }
    }
  ]
}